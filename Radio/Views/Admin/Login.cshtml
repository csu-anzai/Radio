@model Login

<main class="container h-100">
    <div class="row align-items-center h-100">
        <div class="card col-6 mx-auto">
            <div class="card-body">
                <h3>Welcome, Admin!</h3>

                <form method="post" asp-controller="Admin" asp-action="Login">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <input type="hidden" name="ReturnUrl" value="@ViewBag.ReturnUrl" />

                    <div class="form-group">
                        <label asp-for="Username"></label>
                        <input class="form-control" asp-for="Username" placeholder="Enter your username" />
                        <div><span asp-validation-for="Username" class="text-danger"></span></div>
                    </div>

                    <div class="form-group">
                        <label asp-for="Password"></label>
                        <input class="form-control" asp-for="Password" placeholder="Enter your password" />
                        <div><span asp-validation-for="Password" class="text-danger"></span></div>
                    </div>

                    <button type="submit" class="btn btn-primary">Sign in</button>
                </form>
            </div>
        </div>
    </div>
</main>